<Window x:Class="todo_page.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todo_page"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Name="new" Grid.Column="0" Content="Új tennivaló hozzáadása" Width="140" Height="40" HorizontalAlignment="Left" Click="NewToDo_Click"></Button>
        <Button Name="edit" Grid.Column="0" Content="Tennivaló szerkesztése" Width="140" Height="40" HorizontalAlignment="Right" Click="EditPage_Click"></Button>
        <Button Name="delete" Grid.Column="0" Content="Tennivaló törlése" Width="140" Height="40" VerticalAlignment="Bottom" Click="DeletePage_Click"></Button>
        <Frame x:Name="MainFrame" Grid.Column="1" Grid.Row="1"></Frame>
    </Grid>
</Window>
