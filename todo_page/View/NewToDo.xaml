<Page x:Class="todo_page.View.NewToDo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:todo_page.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewToDo">

    <Grid>
        <Label Content="Adj hozzá tennivalót!" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="40" FontFamily="Comic Sans MS" FontWeight="Bold"></Label>
        <TextBox Name="userinput" Text="Mit kell csinálnod?" HorizontalAlignment="Center" Width="200" Height="30" Margin="0 0 0 250" FontSize="15" FontFamily="Comic Sans MS" GotFocus="userinput_GotFocus"></TextBox>
        <Button Name="addnew" Content="Hozzáadás" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" FontFamily="Comic Sans MS" FontWeight="Bold" Click="addnew_Click"></Button>
    </Grid>
</Page>
