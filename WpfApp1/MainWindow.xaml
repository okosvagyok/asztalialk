<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid Background="Bisque">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="A" FontSize="50" HorizontalAlignment="Center"></TextBlock>
        <ListBox Name="Ahalmaz" Margin="10, 80, 10, 10"></ListBox>
        <TextBlock Grid.Column="1" Text="B" FontSize="45" HorizontalAlignment="Center"></TextBlock>
        <ListBox Name="Bhalmaz" Grid.Column="1" Margin="10, 80, 10, 10"></ListBox>
        <TextBlock Grid.Column="2" Text="A únió B" FontSize="45" HorizontalAlignment="Center"></TextBlock>
        <ListBox Name="AuB" Grid.Column="2" Margin="10, 80, 10, 10"></ListBox>
        <TextBlock Grid.Column="3" Text="A metsz B" FontSize="45" HorizontalAlignment="Center"></TextBlock>
        <ListBox Name="AmB" Grid.Column="3" Margin="10, 80, 10, 10"></ListBox>
        <TextBlock Grid.Column="4" Text="A\B" FontSize="45" HorizontalAlignment="Center"></TextBlock>
        <ListBox Name="AminuszB" Grid.Column="4" Margin="10, 80, 10, 10"></ListBox>
        <TextBlock Grid.Column="5" Text="B\A" FontSize="45" HorizontalAlignment="Center"></TextBlock>
        <ListBox Name="BminuszA" Grid.Column="5" Margin="10, 80, 10, 10"></ListBox>
        <TextBlock Text="A halmazok elemszáma" Grid.Row="2" FontSize="30" Grid.ColumnSpan="2"></TextBlock>
        <TextBox Name="aHalmazSzama" Text="" Grid.Row="1" Margin="40, 70, 40, 70"></TextBox>
        <TextBox Name="bHalmazSzama" Text="" Grid.Row="1" Grid.Column="1" Margin="40, 70, 40, 70"></TextBox>
        <Button Grid.Column="2" Grid.Row="2" Width="125" Height="50" Content="Előállít" FontSize="25" Click="eloallito"></Button>
    </Grid>
</Window>
