<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="ajanlat" Content="" HorizontalAlignment="Center" VerticalAlignment="center" BorderBrush="Black" BorderThickness="1" Width="200"></Label>
        <Label Grid.Row="1" Name="dijazottossz" HorizontalAlignment="Center" VerticalAlignment="center" BorderBrush="Black" BorderThickness="1" Width="200"></Label>
        <Label Grid.Row="2" Content="Legdrágább süteményünk" HorizontalAlignment="Center" VerticalAlignment="center" ></Label>
        <Label Grid.Row="3" Name="lblmax" HorizontalAlignment="Center" VerticalAlignment="center" BorderBrush="Black" BorderThickness="1" Width="200"></Label>
        <Label Grid.Row="4" Content="Legolcsóbb süteményünk" HorizontalAlignment="Center" VerticalAlignment="center"></Label>
        <Label Grid.Row="5" Name="lblmin" HorizontalAlignment="Center" VerticalAlignment="center" BorderBrush="Black" BorderThickness="1" Width="200"></Label>
        <Label Grid.Row="6" Content="Süti típusa" HorizontalAlignment="Center" VerticalAlignment="center"></Label>
        <Label Grid.Column="1" Grid.RowSpan="3" VerticalAlignment="Center">
            <Image Source="https://stordfkenticomedia.blob.core.windows.net/df-us/rms/media/recipemediafiles/recipes/retail/x17/16714-birthday-cake-600x600.jpg?ext=.jpg"/>
        </Label>
        <Label Grid.Row="3" Grid.Column="1" Content=""></Label>
        <Label Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="center" BorderBrush="Black" BorderThickness="1" Width="125" Height="30"></Label>
        <Label Grid.Row="5" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="center" BorderBrush="Black" BorderThickness="1" Width="125" Height="30"></Label>
        <TextBox Grid.Row="6" Grid.Column="1" Height="30"></TextBox>
        <Button Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Content="Árajánlat mentése" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="150"></Button>
        <Label Grid.Column="2" Content="Süti neve" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        <Label Grid.Column="2" Grid.Row="1" Content="Süti típusa" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        <Label Grid.Column="2" Grid.Row="2" Content="Egység" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        <Label Grid.Column="2" Grid.Row="3" Content="Ár" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        <Label Grid.Column="2" Grid.Row="4" Content="Díjazott" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        <TextBox Grid.Column="3" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="200"></TextBox>
        <TextBox Grid.Column="3" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="200"></TextBox>
        <TextBox Grid.Column="3" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="200"></TextBox>
        <TextBox Grid.Column="3" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="200"></TextBox>
        <TextBox Grid.Column="3" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="200"></TextBox>
        <Button Grid.Column="3" Grid.Row="6" Content="Új süti felvétele" Margin="10" Width="150"></Button>
    </Grid>
</Window>
