<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid Background="Bisque">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label FontWeight="Bold" Content="PizzaMans" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="3"></Label>
        <Image Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" Source="https://www.foodandwine.com/thmb/Wd4lBRZz3X_8qBr69UOu2m7I2iw=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/classic-cheese-pizza-FT-RECIPE0422-31a2c938fc2546c9a07b7011658cfd05.jpg"></Image>
        <StackPanel Margin="40" Grid.Row="1" Grid.RowSpan="2">
            <Label FontWeight="Bold">Milyen fatja pizzát szeretnél rendelni?</Label>
            <RadioButton GroupName="pizzaTyp">Margherita</RadioButton>
            <RadioButton GroupName="pizzaTyp">Romana</RadioButton>
            <RadioButton GroupName="pizzaTyp">Napoletana</RadioButton>

            <Label FontWeight="Bold">Extra feltét:</Label>
            <CheckBox x:Name="extraCheese">Extra sajt</CheckBox>
            <CheckBox x:Name="extraHam">Extra sonka</CheckBox>
            <CheckBox x:Name="extraBacon" >Extra bacon</CheckBox>
        </StackPanel>
        <Button Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Megrendelés" Name="orderBtn" Width="150" Height="50"></Button>
    </Grid>
</Window>
