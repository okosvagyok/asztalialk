<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox Margin="10,10,0,13" Name="listBox1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="300" FontSize="30" Grid.RowSpan="2">
            <ListBoxItem Name="listItem1" Content=""></ListBoxItem>
            <ListBoxItem Name="listItem2" Content=""></ListBoxItem>
            <ListBoxItem Name="listItem3" Content=""></ListBoxItem>
            <ListBoxItem Name="listItem4" Content=""></ListBoxItem>
            <ListBoxItem Name="listItem5" Content=""></ListBoxItem>
            <ListBoxItem Name="listItem6" Content=""></ListBoxItem>
        </ListBox>
        <CheckBox Name="paros" Grid.Column="1" Content="Páros számok" FontSize="30"></CheckBox>
        <CheckBox Name="tiz" Margin="0, 40, 0, 0" Grid.Column="1" Content="Tízzel osztható számok" FontSize="30"></CheckBox>
        <Button Click="orderButton" Grid.Column="1" Width="100" Height="50" Content="Átváltás"></Button>
        <ListBox Margin="10,10,0,13" Name="listBox2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="300" FontSize="30" Grid.Column="2" Grid.RowSpan="2">
            <ListBoxItem Name="oListItem1" Content=""></ListBoxItem>
            <ListBoxItem Name="oListItem2" Content=""></ListBoxItem>
            <ListBoxItem Name="oListItem3" Content=""></ListBoxItem>
            <ListBoxItem Name="oListItem4" Content=""></ListBoxItem>
            <ListBoxItem Name="oListItem5" Content=""></ListBoxItem>
            <ListBoxItem Name="oListItem6" Content=""></ListBoxItem>
        </ListBox>
    </Grid>
</Window>
